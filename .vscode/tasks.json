{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "command": "npm",
  "tasks": [
    {
      "label": "install",
      "args": ["install"]
    },
    {
      "label": "update",
      "args": ["update"]
    },
    {
      "label": "test",
      "args": ["run", "test"]
    },
    {
      "label": "build",
      "args": ["run", "build"]
    },
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "watch"
    }
  ]
}
